{
  "entrypoint": "index.html",
  "shell": "src/gw2-ninja.html",
  "fragments": [
    "src/pages/page-calc.html",
    "src/pages/page-chatcodes.html",
    "src/pages/page-collections.html",
    "src/pages/page-directory.html",
    "src/pages/page-index.html",
    "src/pages/page-tickets.html",
    "src/pages/page-timer.html",
    "src/pages/page-view404.html",
    "src/pages/page-about.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    ".htaccess"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/gw2-coin-input/images/*",
    "bower_components/gw2-coin-output/images/*"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [{
    "bundle": {
      "stripComments": true,
      "inlineCss": true
    },
    "js": {
      "minify": true,
      "compile": false
    },
    "css": { "minify": true },
    "html": { "minify": false },
    "addServiceWorker": true
  }]
}